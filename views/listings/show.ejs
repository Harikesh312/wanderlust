<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3">
        <img src="<%= listing.image %>"
            class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description %> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
    </div>

    <br>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit"
            class="btn btn-danger col-1 offset-3">Edit</a>
        <form method="post"
            action="/listings/<%= listing._id %>?_method=delete">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post">
            <div>
                <label class="form-label" for="rating">Rating</label>
                <br>
                <input type="range" min="1" max="5" id="rating"
                    name="review[rating]" class="form-range w-25">
            </div>
            <div>
                <label class="form-label" for="comment">Comments</label>
                <textarea name="review[comment]" cols="30" rows="5"
                    id="comment" class="form-control"></textarea>
            </div>
            <br>
            <button class="btn btn-outline-dark">Submit</button>
            
        </form>
        <br>
    </div>
</div>
